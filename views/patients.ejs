    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css"
          integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-brand" href="#">Naossistant</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
            <li class="nav-item active">
                <a class="nav-link" href="/">Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/medecin">Docteurs</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/rdv">RDV Médecin</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">Visites<span class="sr-only">(current)</span></a>
            </li>
        </ul>
    </div>
</nav>


<div class="jumbotron">
    <h1 class="display-4">Liste des patients</h1>
    <p class="lead">Retrouvez le nom de vos proche pour les visites</p>
    <hr class="my-4">

    <form class="form-inline" action="/api/patient/add" method="POST">
        <div class="form-group mb-2 mr-sm-2">
            <label for="nom">Nom:</label>
            <input type="text" class="form-control" id="nom" name="nom">
        </div>
        <div class="form-group mb-2 mr-sm-2">
            <label for="salle">Prénom:</label>
            <input type="text" class="form-control" id="prenom" name="prenom">
        </div>
        <div class="form-group mb-2 mr-sm-2">
            <label for="salle">Salle:</label>
            <input type="number" class="form-control" id="salle" name="salle">
        </div>
        <input value="Submit" type="submit" class="btn btn-primary"/>
    </form>


    <hr class="my-4">


    <table class="table table-striped table-sm table-hover">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Prénom</th>
            <th scope="col">Nom</th>
            <th scope="col">Chambre</th>
            <th scope="col">Supprimer</th>
        </tr>
        </thead>
        <tbody>
        <% out.forEach(function(out){ %>
            <tr>
                <th scope="row"><%= out.id %></th>
                <td scope="row"><%= out.prenom %></td>
                <td scope="row"><%= out.nom %></td>
                <td scope="row"><%= out.salle %></td>
                <td scope="row"><a href="/api/patient/del/<%= out.id %>" class="btn"><i
                                class="far fa-trash-alt"></i></a></td>
            </tr>
        <% }); %>
        </tbody>
    </table>

    <!--<a class="btn btn-primary btn-lg" href="#" role="button">Learn more</a>-->
</div>


</body>
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
